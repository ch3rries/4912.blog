<script is:inline>
  // TODO: Create button icon switcher
  // Yes, I know you've already tried.
  function switchTheme() {
    const html = document.documentElement;

    // Toggle button logic
    if (html.classList.contains("dark")) {
      html.className = "light";
      localStorage.setItem("theme", "light");
    } else {
      html.className = "dark";
      localStorage.setItem("theme", "dark");
    }
  }
</script>

<style>
  wrapper {
    display: flex;
    align-items: center;
    padding: var(--s-px);
  }

  nav {
    display: flex;
    justify-content: space-between;
    align-content: center;
    width: 100%;
  }

  #name a {
    font-family: var(--heading);
    color: var(--blue);
    padding: 4px;
    border: var(--blue) solid var(--border-normal);
    text-decoration: none;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  #menu {
    display: flex;
    align-items: center;
  }

  #menu li {
    list-style: none;
  }

  #menu li a {
    text-decoration: none;
    color: var(--blue);
    font-family: var(--body);
  }

  #themeToggleButton {
    color: var(--text);
    cursor: progress;
  }
</style>

<title>{pageTitle} - {blogName}</title>

<wrapper>
  <nav>
    <div id="name">
      <a href="/">{blogName}</a>
    </div>
    <div id="menu">
      <li><a href="/about">About</a></li>
      <li><a href="/archive">Archive</a></li>
      <i id="themeToggleButton" onclick="switchTheme()" class="fa-solid fa-sun"
      ></i>
    </div>
  </nav>
</wrapper>
