import Default from "@layouts/Default.astro";
---

<style>
  .bio {
    display: grid;
    grid-template-columns: 25% auto;
    margin: 0 0 16px 0;
    flex-direction: column;
  }

  .bio div:not(div:first-child) {
    position: relative;
    padding: 16px;
    margin: 0 0 16px 16px;
    background: var(--surface0);
    border-radius: 32px;
    display: flex;
    align-items: center;
  }

  .bio img {
    width: 100%;
    border-radius: 100%;
  }

  #bars {
    margin: 16px 0 2rem 0;
  }

  bar {
    padding: 8px;
    margin: 16px 0;
    display: block;
    min-height: 32px;
    border-radius: 8px;
    border: 2px solid var(--surface0);
  }

  bar p {
    margin: 0 0 8px 0;
  }

  bar fill {
    display: block;

    border-radius: 4px;
    min-height: 16px;
    /* TODO: Make gradient. */
    /* Or replace with GitHub language colors */
    background: var(--blue);
  }

  #socials {
    margin: 0 0 16px 0;
  }

  pill {
    display: flex;
    align-items: center;
    padding: 16px;
    border-radius: 8px;
    margin: 0 0 8px 0;
    background: var(--surface0);
  }

  pill i {
    margin: 0 16px 0 0;
    padding: 0 16px 0 0;
    border-right: 2px solid var(--text);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text);
    font-size: 2rem;
    width: 32px;
  }

  pill a {
    margin: 0;
    font-size: 2rem;
    font-weight: 400;
    font-style: italic;
    text-decoration: none;
  }

  pill a:hover {
    transition: ease 0.1s;
    font-weight: 800;
  }

  @media only screen and (max-width: 800px) {
    .bio {
      display: grid;
      grid-template-columns: auto;
    }

    .bio div:not(div:first-child) {
      margin: 0;
    }

    .bio div img {
      width: 50%;
      margin: 0 0 32px 0;
      align-self: center;
    }

    .bio div:first-child {
      display: flex;
      flex-direction: column;
    }
  }
</style>

