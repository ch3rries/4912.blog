---
const siteName = "Placeholder";
const { pageTitle } = Astro.props;
const blogName = "cherries";
---

<style>
  nav {
    width: 100%;
    display: flex;
    list-style: none;
  }

  nav div {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  #name {
    background: var(--text);
    color: var(--bg) !important;
  }
</style>

<script is:inline>
  window.addEventListener("load", (event) => {
    if (localStorage.getItem("theme") == null) {
      localStorage.setItem("theme", "dark");
    }
  });
</script>

<title>{pageTitle} - {blogName}</title>

<nav>
  <div>
    <div id="name">
      <p>{blogName}</p>
    </div>
    <div>
      <li>Home</li>
      <li>About</li>
      <li>Archive</li>
    </div>
  </div>
</nav>
