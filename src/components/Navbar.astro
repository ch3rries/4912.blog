---
// INFO: This file contains the Navbar component.
const { pageTitle } = Astro.props;
const blogName = "4912";
---

<style>
  wrapper {
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    position: fixed;
    padding: var(--xs-px);
    background: rgba(var(--crust), 0.6);
    backdrop-filter: blur(20px) saturate(180%);
    border-bottom: var(--border-normal) solid rgba(var(--overlay0), 0.4);
    display: flex;
    justify-content: center;
  }

  nav {
    display: flex;
    justify-content: space-between;
    width: 100%;
    max-width: 800px;
    align-items: center;
    flex-direction: row;
  }

  #name a {
    font-family: var(--heading);
    color: rgb(var(--blue));
    padding: var(--s-px);
    /* border: rgb(var(--blue)) solid var(--border-normal); */
    /* border-radius: var(--b-px); */
    font-size: 1.266rem;
    text-decoration: none;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  #dropdown {
    margin-right: var(--s-px);
  }

  #dropdown a {
    font-size: calc(var(--m-rem) + var(--s-rem));
    color: rgb(var(--text));
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-content: center;
  }
</style>

<title>{pageTitle} - {blogName}</title>
<wrapper>
  <nav>
    <div id="name">
      <a href="/">{blogName}</a>
    </div>
    <div id="dropdown"><a><i class="fa-solid fa-chevron-down"></i></a></div>
  </nav>
</wrapper>
