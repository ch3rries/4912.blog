<!-- NOTE: Works for footer, if fonts are needed elsewhere put in `Default.astro`-->
<style>
  footer {
    background: var(--mantle);
    padding: 16px;
    flex-shrink: 1;
  }

  #links {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  #links a {
    display: flex;
    justify-content: center;
    align-items: center;
    text-decoration: none;
  }

  #links a i {
    margin: 0 4px;
    color: var(--text);
    font-size: 1.5rem;
  }
</style>

<footer>
  <div id="links">
    <a href="https://github.com/ch3rries" aria-label="GitHub"
      ><i class="fa-brands fa-github"></i></a
    >
    <a href="#twitter" aria-label="X"><i class="fa-brands fa-x-twitter"></i></a>
    <a href="#reddit" aria-label="reddit"
      ><i class="fa-brands fa-reddit-alien"></i></a
    >
  </div>
</footer>
